@model HRPaver_Social_Media.Models.EventViewModel



<link href="~/Content/CreateNewEvents.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="login-card">
        <h1>Create new event</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="centerRikk">
            <div>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name"} })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <br />  
            <div>
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.photoPath, new { htmlAttributes = new { @class = "form-control", placeholder = "PhotoPath" } })
                @Html.ValidationMessageFor(model => model.photoPath, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.MaxCapacity, new { htmlAttributes = new { @class = "form-control", placeholder ="Maximum Capacity"} })
                @Html.ValidationMessageFor(model => model.MaxCapacity, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.SignupStart, new { htmlAttributes = new { @class = "form-control", placeholder ="Date it starts ? Format: day/month/year" } })
                @Html.ValidationMessageFor(model => model.SignupStart, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.SignupEnd, new { htmlAttributes = new { @class = "form-control", placeholder = "Date it ends ? Format: day/month/year" } })
                @Html.ValidationMessageFor(model => model.SignupEnd, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", placeholder = "Time it starts ? Format: hour:minute" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
            <br />
            <div>
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", placeholder ="Time it ends ? Format: hour:minute" } })
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="centerRikk">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

        

        <div>
            @Html.ActionLink("Back to List", "ViewAllEvents", "Event")
        </div>
    </div>
}
