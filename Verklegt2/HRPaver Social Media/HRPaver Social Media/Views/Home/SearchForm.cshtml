@using (Html.BeginForm("SearchUsers", "Home", FormMethod.Get))
{
    <div class="input-group">
        @Html.TextBox("searchTerm", "", new { @class = "form-control input-sm", @placeholder = "Search users here...", @rows = 10, @align = "right" })
        <span class="input-group-btn">
            <input class="btn btn-warning btn-sm pull-left" type="submit" value="Search" id="send"/>
        </span>
    </div>
}