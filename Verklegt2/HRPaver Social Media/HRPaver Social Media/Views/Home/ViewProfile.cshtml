@model HRPaver_Social_Media.Models.UserViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div class="row">
    <div class="col-md-4">
        <div id="photoDiv">
            @if (!String.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" width="100%" height="100%" alt="@Model.Name's Profile picture" class="img-rounded"></img>
            }
            else
            {
                <img src="http://www.lcfc.com/images/common/bg_player_profile_default_big.png" width="220" height="260" alt="Default Profile picture" class="img-rounded" />
            }

            @if (!ViewBag.isApplicationUser)
            {
                if (Model.isFriend == true)
                {
                    <p>@Html.ActionLink("Unfriend", "UnFriend", new { id = Model.Id })</p>
                }
                else
                {
                    <p>@Html.ActionLink("Add Friend", "Friend", new { id = Model.Id })</p>
                }
            }
            else
            {
                @Html.ActionLink("Account Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            }
        </div>
    </div>
    <div class="col-md-8">
        <div id="profileInfo">
            <dl class="dl-horizontal">
                <dt>
                    Full Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Email
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    Birthday
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BirthDate.Day) / @Html.DisplayFor(model => model.BirthDate.Month) / @Html.DisplayFor(model => model.BirthDate.Year)
                </dd>
            </dl>

        </div>
    </div>
</div>